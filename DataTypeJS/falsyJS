/* There are values in Javascripts which are always treated as false
Those values are called Falsy */
//Example: 0,null,undefined,NaN,"".
(0)?console.log("conditon:(0)--true"):console.log("conditon:(0)--false");
(NaN)?console.log("conditon:(NaN)--true"):console.log("conditon:(NaN)--false");
("")?console.log("conditon:(\"\")--true"):console.log("conditon:(\"\")--false");
(null)?console.log("conditon:(null)--true"):console.log("conditon:(null)--false");
(undefined)?console.log("conditon:(undefined)--true"):console.log("conditon:(undefined)--false");
